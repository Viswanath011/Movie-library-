class Movie:
    def __init__(self, title, director, release_year):
        self.title = title
        self.director = director
        self.release_year = release_year

class MovieLibrary:
    def __init__(self):
        self.movies = []

    def add_movie(self, movie):
        self.movies.append(movie)

    def display_movies(self):
        if self.movies:
            print("Movie Library:")
            for movie in self.movies:
                print(f"Title: {movie.title}, Director: {movie.director}, Release Year: {movie.release_year}")
        else:
            print("No movies in the library.")
